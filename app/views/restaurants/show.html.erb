
<div class="container">
  <div class="row">
    <div class="col-12">
      <h1><%= @restaurant.name%></h1>
      <p><%= @restaurant.category %></p>
      <p><%= @restaurant.address %></p>
      <p><%= @restaurant.phone_number %></p>
      <br>
      <h3>Reviews of this restaurant</h3>
      <ul>
        <% @restaurant.reviews.each do |review| %>
          <li><%= review.rating %>/5 | <%= review.content %> | Date: <%= review.created_at.strftime("%d/%m/%Y") %></li>
        <% end %>
        <li><%= link_to "Add your review", new_restaurant_review_path(@restaurant)%></li>
      </ul>
      <br>
      <p><%= link_to "Back to list", restaurants_path%> | <%= link_to "Edit this restaurant", edit_restaurant_path%> |
      <%= link_to "Delete", restaurant_path(@restaurant.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
    </div>
  </div>
</div>
