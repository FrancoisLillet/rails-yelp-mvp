<div class="container">
<h1>Make a review about "<%= @restaurant.name %>"</h1>
  <div class="row">
    <div class="col-xs-12 col-sm-12">
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: ["0", "1", "2", "3", "4", "5"]%>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
  <p> <%= link_to "Back to restaurant", restaurant_path(@restaurant) %></p>
</div>
